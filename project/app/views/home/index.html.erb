<section class="home-page">
  <div class="carousel-section-home-page">

    <img src="/carousel/1.png" style="visibility:hidden;" />
    <div>
      <%= render "customcarousel" %> 
    </div>

  </div>







  <div class="row about-conference">
    <div class="col-md-8">

      <div >
        <div class="left">
          <br>
         <!--  <form action="/icicc2019.pdf">
              <input type="submit" value="Proceeding of ICICC-2019" />
          </form>
          <br>
          <form action="/E-ProceedingofICICC-2018.pdf">
              <input type="submit" value="Proceeding of ICICC-2018" />
          </form> -->


          <br><br>
          <h1 class="custom-font">About Conference</h1><hr>
          <p><%= @aboutconference %> All the accepted papers (after double blinded peer review) are published in Springer AISC series ( <b>Indexing: The books of this series are submitted to ISI Proceedings, EI-Compendex, DBLP, SCOPUS, Google Scholar and Springerlink </b>) and extended selected papers will be published in the special issues of SCI/SCOPUS/WoS/DBLP/ACM indexed Journals.</p>
          


          <br>

          Paper Submission Link : <a href="https://easychair.org/conferences/?conf=icicc2021" target="_blank">Easy Chair Submission Portal</a>


        </div>

      </div>
    </div>
    <div class="col-md-4">
      <div class="box">
        <h1 class="custom-font"> Downloads</h1>
        <hr>
        <marquee behavior="" direction="up"  truespeed="true" scrolldelay = "150" onmouseover="this.stop();" onmouseout="this.start();" >
          <%@downloads.each do |download|%>
          <%=link_to url_for(controller: "home", action: "download", filename: download.download_file) do %>
          <%=download.file_name.titleize%> <i class="fa fa-download" aria-hidden="true"></i>
          <%end%>
          <br> <hr>
          <%end%>
        </marquee>
        <span> <a href="/downloads_page">See More...</a> </span>
      </div>

    </div>
  </div>
  <br>
  <div class="row imp-dates-notice">
    <div class="col-md-6">
      <div class="box">
        <h1 class="custom-font">Important Dates</h1>
        <hr>
        <marquee behavior="" direction="up"  truespeed="true" scrolldelay = "150" onmouseover="this.stop();" onmouseout="this.start();" >
          <% @important_dates.each do |impdate| %>
          <b><%= impdate.title %></b>
          <br>
          <%= impdate.date.to_date.to_formatted_s(:long_ordinal) %>
          <br><hr />
          <% end %>
        </marquee>
        <span> <a href="/important_dates">Read More...</a> </span>
      </div>
    </div>


    <div class="col-md-6">
      <div class="box">
        <h1 class="custom-font">Notices</h1>
        <marquee behavior="" direction="up"  truespeed="true" scrolldelay = "150" onmouseover="this.stop();" onmouseout="this.start();" >
          <%@newsupdate.each do |news|%>
          <b><%=news.news%></b> <br><br>
          <hr>
          <%end%>
        </marquee>



      </div>
    </div>

  </div>

  <br>


